<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:FamilyChat.Maui.Pages"
       x:Class="FamilyChat.Maui.AppShell">
    <TabBar>
        <ShellContent Title="Conversations" ContentTemplate="{DataTemplate pages:ConversationsPage}" />
        <ShellContent Title="Search" ContentTemplate="{DataTemplate pages:SearchPage}" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
        <ShellContent Title="Admin" ContentTemplate="{DataTemplate pages:AdminPage}" IsVisible="{Binding ShowAdmin}" />
    </TabBar>
</Shell>
