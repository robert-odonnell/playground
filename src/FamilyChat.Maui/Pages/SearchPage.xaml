<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:contracts="clr-namespace:FamilyChat.Contracts.Search;assembly=FamilyChat.Contracts"
             x:Class="FamilyChat.Maui.Pages.SearchPage"
             Title="Search">
    <Grid Padding="16" RowDefinitions="Auto,Auto,*">
        <Entry Placeholder="Search messages and files" Text="{Binding Query}" />
        <Button Grid.Row="1" Text="Search" Command="{Binding SearchCommand}" />
        <CollectionView Grid.Row="2" ItemsSource="{Binding Hits}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="contracts:SearchHitDto">
                    <VerticalStackLayout Padding="8">
                        <Label Text="{Binding Kind}" FontAttributes="Bold" />
                        <Label Text="{Binding Snippet}" />
                        <Label Text="{Binding FileName}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
