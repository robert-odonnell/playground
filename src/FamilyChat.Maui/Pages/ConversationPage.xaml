<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:contracts="clr-namespace:FamilyChat.Contracts.Messages;assembly=FamilyChat.Contracts"
             x:Class="FamilyChat.Maui.Pages.ConversationPage"
             Title="Conversation">
    <Grid Padding="12" RowDefinitions="Auto,*,Auto,Auto" RowSpacing="8">
        <Button Text="Load Older" Command="{Binding LoadOlderCommand}" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="contracts:MessageDto">
                    <Border Stroke="#E5E7EB" StrokeThickness="1" Padding="8" Margin="0,0,0,8">
                        <VerticalStackLayout>
                            <Label Text="{Binding SenderDisplayName}" FontAttributes="Bold" FontSize="12" />
                            <Label Text="{Binding Body}" />
                            <HorizontalStackLayout>
                                <Button Text="ðŸ‘" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleReactionCommand}" CommandParameter="{Binding .}" />
                                <Button Text="Delete" Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteMessageCommand}" CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Entry Grid.Row="2" Placeholder="Type a message" Text="{Binding Draft}" />
        <Button Grid.Row="3" Text="Send" Command="{Binding SendCommand}" />
    </Grid>
</ContentPage>
