<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FamilyChat.Maui.Pages.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Notifications" FontSize="20" FontAttributes="Bold" />
        <HorizontalStackLayout>
            <Label Text="In-app toasts" VerticalOptions="Center" />
            <Switch IsToggled="{Binding InAppToastsEnabled}" />
        </HorizontalStackLayout>
        <Button Text="Save" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>
